<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %C{15}.%L - %msg%n</pattern>
    </encoder>
  </appender>

  <!--  <logger name="com.smartthings.recipes.clients" level="info"/>-->
  <!--  <logger name="io.netty" level="warn" />-->

  <root level="warn">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
